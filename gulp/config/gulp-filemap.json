{
  "env": {
    "dev": {
      "base": "./src/",
      "dest": "./develop/"
    },
    "prod": {
      "base": "./src/",
      "dest": "./production/"
    }
  },
  "sourceFiles": {
    "jsCritical": [
      "js/vendor/modernizr.js"
    ],
    "js": [
      "js/**/*.js",
      "!js/vendor/modernizr.js"
    ],
    "scss": [
      "scss/styles.s+(a|c)ss"
    ],
    "css": [
      "styles/**/*.css"
    ],
    "html": [
      "index.html"
    ],
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}",
    "tests": {
      "e2e": [
        "tests/e2e/**/*.js"
      ],
      "unit": [
        "../../../src/tests/unit/**/*.js",
           "../../../src/**/*.spec.js"
      ]
    },
    "zip": ["./production/**/*"]
  },
  "sourceFolders": {
    "packages" : "./src/modules"
  },
  "targetFolders": {
    "js": "js/",
    "css": "styles/",
    "html": "/",
    "images": "img/",
    "maps": "./",
    "revManifest": "./src/",
    "zip": "./zip/",
    "packages" : "modules/"
  },
  "targetFiles": {
    "js": "app.js",
    "css": "styles.css",
    "revManifest": "rev-manifest.json",
    "zip": null,
    "packagePostfix": "package"
  },
  "watchFiles": {
    "scss": "scss/**/*.s+(a|c)ss",
    "css": "scss/**/*.s+(a|c)ss",
    "js": "js/**/*.js",
    "html": "*.{html,htm,xml,txt}",
    "images": "img/**/*.{gif,png,jpeg,jpg,svg}"
  }
}
